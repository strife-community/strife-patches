<effect useentityeffectscale="true" deferred="true">
	<definitions>
		<particlesystem name="system0" space="world" scale="1.25">

			<sound
				linearfalloff="true" 
				falloffstart="1000"
				falloffend="2500"
				volume=".65"
				sample="../sounds/impact.wav"
			/>

			<sound
				linearfalloff="true" 
				falloffstart="1000"
				falloffend="2500"
				volume=".35"
				sample="/heroes/xalynx/sounds/impact_%.wav"
			/>
<!--
			<billboard
				bone="_bone_centerofchest"
				life="200"
				position="0 0 0"
				startframe="0"
				scale="2.75"
				endframe="1"
				material="/shared/effects/materials/3d_claw.material"
				startcolor="1 .5 0"
